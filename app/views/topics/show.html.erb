<div class="page-header">
  <h3>Topic #<%= @topic.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @topic.name %></dd>

      <dt>Subject</dt>
      <dd><%= @topic.subject %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/topics" class="btn btn-primary">
        Back
      </a>
      <a href="/topics/<%= @topic.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_topic/<%= @topic.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
