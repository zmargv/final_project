<div class="page-header">
  <h1>
    Topics
    <a href="/topics/new" class="btn btn-lg btn-success">New Topic</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Subject</th>
        <th>Actions</th>
      </tr>

      <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= topic.subject %></td>
        <td>
          <a href="/r/<%= topic.name %>" class="btn btn-primary">Show</a>
          <a href="/r/<%= topic.name %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_topic/<%= topic.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
