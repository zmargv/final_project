<!-- Validation failure messages -->
<% if @p_vote.errors.any? %>
  <% @p_vote.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add P Vote</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_p_vote" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for up -->
      <div class="form-group">
        <label for="up" class="control-label">
          Up
        </label>

        <input type="text" id="up" name="up" placeholder="Up" class="form-control" value="<%= @p_vote.up %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @p_vote.user_id %>">
      </div>

      <!-- Label and input for post_id -->
      <div class="form-group">
        <label for="post_id" class="control-label">
          Post
        </label>

        <input type="text" id="post_id" name="post_id" placeholder="Post" class="form-control" value="<%= @p_vote.post_id %>">
      </div>

      <button class="btn btn-success">
        Create P Vote
      </button>
      or
      <a href="/p_votes">Cancel</a>
    </form>
  </div>
</div>
