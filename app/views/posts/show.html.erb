<div class="container">
    <div class="row">
        <div class="col-sm-12">
          <h3><a href="../r/<%= @post.topic.name %>"><%= @post.topic.name %></a></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 panel panel-default">
          <span>
            <h6>
              <%= link_to @post.title, "http://"+@post.url, :target => "_blank", :only_path => false %>
            </h6>
          </span>
          <span><%= @post.body %></span>
          <span>
            <ul class="list-inline">
              <li><p>test1</p></li>
              <li><p>test2</p></li>
            </ul>
          </span>
        </div>
        <div class="col-sm-4"></div>
    </div>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-6">
          <form action="/create_comment" method="post" _lpchecked="1">
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
            <input type="hidden" name="post_id" value="<%=@post.id%>">
            <input type="hidden" name="user_id" value="<%=current_user.id%>">
            <!-- Label and input for body -->
            <div class="form-group">
              <label for="body" class="sr-only">Body</label>
              <input type="text" id="body" name="body" placeholder="Add a comment..." class="form-control" required="">
            </div>
          </form>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-4"></div>
    </div>
    <div class="row">
        <div class="col-sm-8">
          <ul class="list-group">
            <% @post.comments.each do |comment| %>
            <li class="media">
              <div class="media-body">
                <h6 class="media-heading">
                  <a href="/users/<%= comment.user.id %>"><%= comment.user.username %></a>
                  <small> | <%= time_ago_in_words(comment.created_at) %> ago
                  <% if comment.user_id==current_user.id %>
                    <a href="/delete_comment/<%= comment.id %>"><i class="fa fa-trash"></i></a>
                  <% end %>
                  </small>
                </h6>
                <%= comment.body %>
              </div>
            </li>
            <% end  %>
          </ul>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
